<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linearLayout1"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon"
                    android:background="@drawable/circle"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="20dp"
                android:layout_below="@+id/linearLayout1"
                android:layout_height="20dp"
                android:layout_marginTop="-10dp"
                android:rotation="45"
                android:layout_centerHorizontal="true"
                android:src="@drawable/square"
                />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/ImageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="55dp">

                <ImageView
                    android:id="@+id/ImageView_username"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:tint="#FFFFFF"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/username"
                    />

                <EditText
                    android:id="@+id/txt_user"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ImageView_username"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Username"
                    android:textSize="16dp"
                    android:layout_alignBottom="@id/ImageView_username"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_below="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ImageView_Email"
                    android:layout_width="40dp"
                    android:padding="8dp"
                    android:tint="#FFFFFF"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_email"
                    />

                <EditText
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ImageView_Email"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Email Address"
                    android:textSize="16dp"
                    android:layout_alignBottom="@id/ImageView_Email"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ImageView1_Password"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:tint="#FFFFFF"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_password"
                    />

                <EditText
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ImageView1_Password"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:layout_alignBottom="@id/ImageView1_Password"

                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_below="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ImageView1_Confirm"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:tint="@color/WhiteSmoke"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_password"
                    />

                <EditText
                    android:id="@+id/txt_confirm"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ImageView1_Confirm"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="16dp"
                    android:layout_alignBottom="@id/ImageView1_Confirm"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_below="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ImageView1_Number"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:tint="@color/WhiteSmoke"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/img_phone"
                    />

                <EditText
                    android:id="@+id/txt_number"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:background="@color/editTextBG"
                    android:layout_toRightOf="@id/ImageView1_Number"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:hint="Contact number"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:layout_alignBottom="@id/ImageView1_Number"
                    />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="30dp"
                    android:background="#D328A4"
                    android:text="Register"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-black"/>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>