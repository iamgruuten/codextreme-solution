<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".request_activity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F2E2F2"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:padding="20dp"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:textSize="15sp"
            android:text="Request for help"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center"
            android:layout_marginRight="10dp"
            android:src="@drawable/help"/>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2D5E5"
        android:padding="80dp">
    <ImageView
        android:id="@+id/image_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/camera"/>
    </FrameLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="*Earn 10 points for requesting"/>

    <EditText
        android:id="@+id/postal"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Postal code for collection"
        android:inputType="number"
        android:maxLength="6"
        android:minLines="6"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/Black"
        android:layout_margin="15dp"
        >
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:background="#DEDEE8"
        android:focusable="true"
        android:padding="40dp"
        android:layout_margin="4dp"
        android:hint="Short Description of recycle items"
        android:textSize="10dp"
        />
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_margin="20dp"
        android:text="submit"/>

</LinearLayout>